    explanation: "The UCC governs sales of all tangible goods."
  }
];

    // State
    let cards = [...originalCards];
    let index = 0;
    let flipped = false;
    let baseFontSize = 18;

    // Elements
    const cardEl = document.getElementById('card');
    const questionEl = document.getElementById('question');
    const answerEl = document.getElementById('answer');
    const ruleEl = document.getElementById('rule');
    const explanationEl = document.getElementById('explanation');
    const progressFillEl = document.getElementById('progressFill');
    const counterTextEl = document.getElementById('counterText');
    const sizeSlider = document.getElementById('size');
    const sizeValue = document.getElementById('sizeValue');

    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    const resetBtn = document.getElementById('resetBtn');
    const shuffleBtn = document.getElementById('shuffleBtn');
    const flipBtn = document.getElementById('flipBtn');

    function render(){
      const c = cards[index];
      // Question centered and bold
      questionEl.textContent = c.question;

      // Back: left-aligned sections, with new paragraphs after Answer and Rule
      answerEl.textContent = c.answer;
      ruleEl.textContent = c.rule;
      explanationEl.textContent = c.explanation;

      // Progress text and bar
      counterTextEl.textContent = `Card ${index + 1} of ${cards.length}`;
      const pct = ((index + 1) / cards.length) * 100;
      progressFillEl.style.width = `${pct}%`;

      // Font size scaler
      questionEl.style.fontSize = `${baseFontSize}px`;
      answerEl.style.fontSize = `${baseFontSize - 1}px`;
      ruleEl.style.fontSize = `${baseFontSize - 1}px`;
      explanationEl.style.fontSize = `${baseFontSize - 1}px`;
    }

    function flipCard(force){
      if(typeof force === 'boolean'){
        flipped = force;
      }else{
        flipped = !flipped;
      }
      cardEl.classList.toggle('flipped', flipped);
    }

    function prev(){
      if(index > 0){
        index--;
        flipCard(false); // show front on navigation
        render();
      }
    }

    function next(){
      if(index < cards.length - 1){
        index++;
        flipCard(false);
        render();
      }
    }

    function reset(){
      cards = [...originalCards];
      index = 0;
      flipCard(false);
      render();
    }

    function shuffle(){
      // Fisher–Yates shuffle
      for(let i = cards.length - 1; i > 0; i--){
        const j = Math.floor(Math.random() * (i + 1));
        [cards[i], cards[j]] = [cards[j], cards[i]];
      }
      index = 0;
      flipCard(false);
      render();
    }

    // Event bindings
    cardEl.addEventListener('click', () => flipCard());
    cardEl.addEventListener('keydown', (e) => {
      if(e.key === 'Enter' || e.key === ' '){
        e.preventDefault();
        flipCard();
      }
      if(e.key === 'ArrowRight'){ next(); }
      if(e.key === 'ArrowLeft'){ prev(); }
    });

    prevBtn.addEventListener('click', prev);
    nextBtn.addEventListener('click', next);
    resetBtn.addEventListener('click', reset);
    shuffleBtn.addEventListener('click', shuffle);
    flipBtn.addEventListener('click', () => flipCard());

    sizeSlider.addEventListener('input', (e) => {
      baseFontSize = parseInt(e.target.value, 10);
      sizeValue.textContent = `${baseFontSize} px`;
      render();
    });

    // Init
    render();
  </script>
</body>
</html>
